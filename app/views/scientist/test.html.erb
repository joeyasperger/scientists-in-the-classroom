<% for scientist in Scientist.all %>
	<h3> <%= scientist.name %> </h3>
	
	<%= scientist.lat %>
	<%= scientist.lng %>
	<h4> Climate change </h4>
	<%= scientist.climate_change %>
	<h4> evolution </h4>
	<%= scientist.evolution %>
<% end %>


<% for teacher in Teacher.all %>
	<h3> <%= teacher.name %> </h3>
	
	<%= teacher.lat %>
	<h4> Climate change </h4>
	<%= teacher.climate_change %>
	<h4> evolution </h4>
	<%= teacher.evolution %>
	<%= teacher.lng %>
<% end %>

<% for scientist in Scientist.all %>
	<% if scientist.less_than_30 then %>
		<% distance = 30 %>
	<% else %>
		<% distance = 50 %>
	<% end %>
    <% nearby_teachers = Teacher.within(distance, :origin => [scientist.lat, scientist.lng]).all %>
    <h2> Teachers near <%= scientist.name %> </h2>
    <%for nearby_teacher in nearby_teachers %>
    	<%= nearby_teacher.name %><br/>
    <% end %>
<% end %>